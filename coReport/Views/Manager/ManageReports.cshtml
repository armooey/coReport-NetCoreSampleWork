@using coReport.Models.ReportViewModel
@model UserAndManagerReportViewModel

@{
    ViewData["Title"] = "گزارشات";
}






<div class="row">
    <div class="col-md p-3 box-widget-scrollable" style="height:600px; max-height:600px">

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#allReports">گزارشات امروز</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#unseenReports">گزارشات دیده ‌نشده</a>
            </li>
        </ul>
        <hr />
        <div class="tab-content">
            <div id="allReports" class="tab-pane fade">
                @if (!Model.UserReports.Any())
                {
                    <div class="text-lg-center"><b>هیچ گزارشی یافت نشد.</b></div>
                }
                else
                {
                    @foreach (ReportViewModel report in Model.UserReports)
                    {
                        <partial name="UserReportPartialView" model="report" />
                    }
                }
            </div>
            <div id="unseenReports" class="tab-pane fade show active">
                @if (!Model.UserReports.Any(ur => ur.IsViewed == false))
                {
                    <div class="text-lg-center"><b>هیچ گزارشی یافت نشد.</b></div>
                }
                else
                {
                    @foreach (ReportViewModel report in Model.UserReports.Where(ur => ur.IsViewed == false))
                    {
                        <partial name="UserReportPartialView" model="report" />
                    }
                }
            </div>
        </div>
    </div>
    <div class="col-md p-3 box-widget-scrollable" style="height:600px; max-height:600px">
        <h6><b>پیام ها</b></h6>
        <hr />
        @if (true)
        {
            <div class="text-lg-center"><b>پیامی موجود نیست.</b></div>
        }
        else
        {

            @*@foreach (var message in Model.Messages)
            {
                <partial name="_MessagePartialView" model="message" />
            }*@
        }
    </div>
</div>


@section scripts
{
    <script src="~/lib/popper.js/umd/popper.min.js"></script>
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script>
        function DeleteReport(id) {
            bootbox.confirm({
                message: "آیا می‌خواهید این گزارش را حذف کنید؟",
                buttons: {
                    confirm: {
                        label: 'بله',
                        className: 'btn-primary'
                    },
                    cancel: {
                        label: 'خیر',
                        className: 'btn-secondary'
                    }
                },
                callback: function (result) {
                    if (result)
                        $.ajax({
                            url: "DeleteReport",
                            data: { id: id }
                        }).done(function () {
                            location.reload();
                        });
                }
            });
        }
    </script>
}
