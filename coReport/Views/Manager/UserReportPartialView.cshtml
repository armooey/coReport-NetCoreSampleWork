@using coReport.Models.ReportViewModel
@model ReportViewModel

<div class="border border-dark p-2 rounded card-widget report">
    <div class="col">
        <h6><i class="fas fa-clipboard-list"></i> <b>@Model.Title</b></h6>
        <span class="span-control"><i class="fas fa-user"></i> @Model.Author.FirstName @Model.Author.LastName</span>
        <span class="span-control"><i class="fas fa-calendar-alt"></i> @Model.Date.GetDate()</span>
        <span class="span-control">پروژه @Model.ProjectName</span>
        <a asp-action="CreateManagerReport" asp-controller="Report" asp-route-id="@Model.Id" 
           class="btn btn-primary float-left" style="margin-top:-15px"><i class="fas fa-pencil-alt"></i> بررسی</a>
    </div>
</div>