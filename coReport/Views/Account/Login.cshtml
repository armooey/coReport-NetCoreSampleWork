@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity
@using coReport.Auth
@using coReport.Models.AccountViewModels
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "ورود";
}


<div class="col-md-4  p-3 box-widget" style="margin: auto; margin-top:10%">
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
        <h4 class="text-center">ورود</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-md">
            <div class="form-group">
                <label asp-for="Username" class="col-md-4 control-label"></label>
                <div class="col-md">
                    <input asp-for="Username" class="form-control text-center" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-md-4"></label>
                <div class="col-md">
                    <input asp-for="Password" class="form-control text-center" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group text-center">
                <div class=" col-md-10">
                    <div class="checkbox" >
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>
            <div>؟</div>
        </div>
        <div class="form-group text-center">
                <button type="submit" class="btn btn-primary" style="width:70%;">ورود</button>
                <a asp-action="Register" class="btn btn-secondary mt-1" asp-route-returnurl="@ViewData["ReturnUrl"]" 
                   style="width:70%">حساب کاربری جدید</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
