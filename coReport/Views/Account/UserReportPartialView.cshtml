@using coReport.Models.ReportViewModel
@model ReportViewModel

<div class="border border-dark p-2 rounded card-widget report">
    <div class="col">
        <h6><i class="fas fa-clipboard-list"></i> <b>@Model.Title</b></h6>
        <span class="span-control">پروژه @Model.ProjectName</span>
        <span class="span-control"><i class="fas fa-calendar-alt"></i> @Model.Date.GetDate()</span>


        <a asp-action="Edit" asp-controller="Report" asp-route-id="@Model.Id" class="btn btn-primary float-left span-control" style="margin-top:-15px">
            <i class="fas fa-edit"></i> ویرایش
        </a>
        @if (Model.IsViewed)
        {
            <button class="btn btn-danger float-left span-control" onclick="NotDeletableAlert()" style="margin-top:-15px">
                <i class="fas fa-trash-alt"></i> حذف
            </button>
        }
        else
        {
            <button class="btn btn-danger float-left span-control" onclick="DeleteReport(@Model.Id)" style="margin-top:-15px">
                <i class="fas fa-trash-alt"></i> حذف
            </button>
        }

    </div>
</div>