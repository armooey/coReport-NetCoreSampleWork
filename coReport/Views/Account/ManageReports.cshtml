@using coReport.Models.ReportViewModel
@model UserReportViewModel

@{
    ViewData["Title"] = "گزارشات";
}

<div class="text-left"><a asp-action="Create" asp-controller="Report" class="btn btn-primary">ایجاد گزارش</a></div>
<hr />
<div class="row">
    <div class="col-md p-3 box-widget">
        <h6><b>گزارشات</b></h6>
        <hr />
        @if (Model.Reports.Count() == 0)
        {
            <div class="text-lg-center"><b>گزارشی موجود نیست.</b></div>
        }
        else
        {

            @foreach (var report in Model.Reports)
            {
                <partial name="UserReportPartialView" model="report" />
            }
        }
    </div>
    <div class="col-md p-3 box-widget">
        <h6><b>پیام ها</b></h6>
        <hr />
        @if (Model.Messages.Count() == 0)
        {
            <div class="text-lg-center"><b>پیامی موجود نیست.</b></div>
        }
        else
        {

            @foreach (var message in Model.Messages)
            {
                <partial name="_MessagePartialView" model="message" />
            }
        }
    </div>
</div>



@section scripts
{
    <script src="~/lib/popper.js/umd/popper.min.js"></script>
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script>
        
        $(document).ready(function(){
            $('[data-toggle="popover"]').popover();
            $('.seen-False').attr('style', 'background-color:lightgray');
            $('[data-toggle="popover"]').click(function () {
                $(this).parent().parent().attr('style', 'background-color:white');
            });

        });

        function DeleteReport(id) {
            bootbox.confirm({
                message: "آیا می‌خواهید این گزارش را حذف کنید؟",
                buttons: {
                    confirm: {
                        label: 'بله',
                        className: 'btn-primary'
                    },
                    cancel: {
                        label: 'خیر',
                        className: 'btn-secondary'
                    }
                },
                callback: function (result) {
                    if (result)
                        $.ajax({
                            url: "/Report/Delete",
                            data: { id: id }
                        }).done(function () {
                            location.reload();
                        });
                }
            });
        }

        function DeleteMessage(id) {
            bootbox.confirm({
                message: "آیا می‌خواهید این پیام را حذف کنید؟",
                buttons: {
                    confirm: {
                        label: 'بله',
                        className: 'btn-primary'
                    },
                    cancel: {
                        label: 'خیر',
                        className: 'btn-secondary'
                    }
                },
                callback: function (result) {
                    if (result)
                        $.ajax({
                            url: "/Message/DeleteMessage",
                            data: { id: id }
                        }).done(function () {
                            location.reload();
                        });
                }
            });
        }

        function ViewMessage(id)
        {
            $.ajax({
                url: "/Message/SetViewed",
                data: { id: id }
            });
        }

    </script>
}
