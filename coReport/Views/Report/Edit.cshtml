@using coReport.Models.ReportViewModel
@model CreateReportViewModel
@{
    ViewData["Title"] = "ویرایش گزارش";
}
<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
<link href="~/lib/quill/quill.snow.css" rel="stylesheet" />

<div class="container p-2 box-widget">
    <div class="container">
        <form id="form" asp-controller="Report" asp-action="Edit" method="post"
              class="form-horizontal" role="form" enctype="multipart/form-data">
            <h5>ویرایش گزارش</h5>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Title" class="col-md control-label"></label>
                        <div class="col-md">
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProjectName" class="col-md control-label"></label>
                        <div class="col-md">
                            <input asp-for="ProjectName" class="form-control" />
                            <span asp-validation-for="ProjectName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="ProjectManagerIds" class="col-md control-label"></label>
                        <div class="col-md disabled-select">
                            <select id="manager_multiselect" asp-for="ProjectManagerIds" style="width: 100%" multiple="multiple">
                                <option></option>
                                @foreach (var user in Model.Managers)
                                {
                                    <option value="@user.Id">@user.FirstName @user.LastName</option>
                                }
                            </select>
                            <span asp-validation-for="ProjectManagerIds" class="text-danger"></span>
                            @if (Model.IsSubmitedByAdmin)
                            {
                                <span class="text-muted"><small>به دلیل ثبت گزارش مدیر این فیلد غیرقابل تغییر است.</small></span>
                            }
                        </div>
                    </div>

                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="EnterTime" class="col-md control-label"></label>
                        <div class="col-md">
                            <input asp-for="EnterTime" class="form-control" />
                            <span asp-validation-for="EnterTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExitTime" class="col-md control-label"></label>
                        <div class="col-md">
                            <input asp-for="ExitTime" class="form-control" />
                            <span asp-validation-for="ExitTime" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <hr />


            <div class="form-group">
                <div class="col-md-11">
                    <textarea id="text" hidden="hidden" asp-for="Text"></textarea>
                    <h5>گزارش</h5>
                    <div class="form-group" id="editor">
                    </div>
                    <span asp-validation-for="Text" class="text-danger"></span>
                    @if (Model.AttachmentName != null)
                    {
                        <div>
                            <a class="btn btn-link" asp-controller="Report" asp-action="DownloadReportAttachment" asp-route-fileName="@Model.AttachmentName">
                                <i class="fas fa-paperclip"></i> دانلود ضمیمه
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-muted">ضمیمه‌ای موجود نیست.</div>
                    }
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Attachment" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="Attachment" class="form-control" />
                    <span class="text-muted"><small>افزودن ضمیمه جدید باعث حذف ضمیمه قبلی می‌شود.</small></span>
                    <span asp-validation-for="Attachment" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">ثبت</button>
                    <a class="btn btn-secondary" asp-controller="Account" asp-action="ManageReports">بازگشت</a>

                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
<script src="~/lib/select2/js/select2.min.js"></script>
<script src="~/lib/select2/js/i18n/fa.js"></script>
<script src="~/lib/quill/quill.js"></script>

<script>

    $(document).ready(function () {
        $('#manager_multiselect').select2({
            placeholder: 'انتخاب کنید...',
            dir: 'rtl',
            language: 'fa'
        });
        if ('@Model.IsSubmitedByAdmin' == "True")
        {
            $('#manager_multiselect').prop('disabled', true);
        }
    });


    //Trigger download action
    function download(name)
    {
        $.ajax({
            url: "/Report/DownloadReportAttachment",
            data: { fileName: name }
        });
    }

    //Quil rich text initialization
    var FontAttributor = Quill.import('attributors/class/font');
    FontAttributor.whitelist = [
     'arial','default' ,'times-new-roman'
    ];
    Quill.register(FontAttributor, true);

    var toolbarOptions = [
      [{ 'font': ['arial', 'default', 'times-new-roman'] }],
      [{ 'size': ['small', false, 'large', 'huge'] }],
      ['bold', 'italic', 'underline', 'strike'],
      [{ 'align': [] }],
      [{ 'direction': 'rtl' }],
      [{ 'color': [] } , { 'background': [] }],
      [{ 'list': 'ordered'}, { 'list': 'bullet' }],
      [{ 'header': [1, 2, 3, false] }],
      ['code-block']
     ];

    var quill = new Quill('#editor', {
        modules: {
    toolbar: toolbarOptions
    },
    theme: 'snow'
    });
    quill.setContents(@Html.Raw(Model.Text));

    $('#form').on('submit', function () {
        $('#manager_multiselect').prop('disabled', false);//Enabling the select element to post with the form
        var textBox = document.getElementById("text");
        textBox.value = JSON.stringify(quill.getContents());
    });
</script>
}
