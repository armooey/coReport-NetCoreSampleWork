@using coReport.Models.HomeViewModels
@model ErrorViewModel
@{
    ViewData["Title"] = "خطا";
}
    <link href="~/css/error.css" rel="stylesheet" />
    <body class="loading">
        <h2>خطای سرور</h2>
        @if (Model.Error != null)
        {
            <h3>@Model.Error</h3>
        }
        else
        {
            <h3>سمت سرور یه مشکلی داریم <b>:(</b></h3>
        }

        <div class="gears">
            <div class="gear one">
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
            </div>
            <div class="gear two">
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
            </div>
            <div class="gear three">
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
        <script src="js/main.js" type="text/javascript"></script>
    </body>

    <script>
        $(function () {
            setTimeout(function () {
                $('body').removeClass('loading');
            }, 500);
        });

    </script>